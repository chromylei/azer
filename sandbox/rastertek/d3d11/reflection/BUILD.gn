
import("//build/templates/afx.gni")

afx("rastertek_ambient_effect") {
  source = "ambient.afx"
  classname = "AmbientEffect"
  filename = "ambient"
}

afx("rastertek_mirror_effect") {
  source = "mirror.afx"
  classname = "MirrorEffect"
  filename = "mirror"
}

